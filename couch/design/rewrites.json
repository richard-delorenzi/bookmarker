[
    {
        "from": "favicon.ico",
        "to": "images/stars.png"
    },
    {
        "from" : "script/*",
        "to" : "script/*"
    },
    { 
        "from" : "utils_script",
        "to" :   "/_utils/script/*"
    },
    {
        "from" : "style/*",
        "to" : "style/*"
    },
    {
        "from" : "images/*",
        "to" : "images/*"
    },
    {
        "from" : "vendor/*",
        "to" : "vendor/*"
    },
    {   
        "from": "server_lib/:~name",
        "to": "_list/sub/design",
        "query": {
            "~dir": "lib",          
            "include_docs": "true"
        }
    },
    {
        "from": "_layout",
        "to": "_list/mustache-only/none",
        "query": {
            "template": "layout"
        }       
    },
    { 
        "from" : "index",
        "to" : "_list/mustache-only/none",
        "query": {
            "template":"index"
        }
    },
    {
        "from" : "",
        "to"   : "_rewrite/index" 
    },
    {
	"from" : "login",
	"to"   : "../../../login/_design/auth/_rewrite" 
    },
    
    {
        "from" : "webmarks/add",
        "to":    "_show/add-webmark",
        "query": {
            "template": "add-webmark",
            "title_part1": "Add",
            "title_part2": "webmark",
	    "subSite" : "webmark",
	    "type": "webmark"
        }
    },
    {
        "from" : "webmarks/edit/:~id",
        "to":    "_show/add-webmark/:~id",
        "query": {
            "template": "add-webmark",
            "title_part1": "Edit",
            "title_part2": "webmark",
	    "subSite" : "webmark"
        }
    },
    {
        "from": "_webmarks_base",
        "to": "_list/webmarks/webmarks-by-date",
        "query": {
            "template": "webmarks",
            "reduce": "false",
            "include_docs": "true",
            "descending" : "true",
	    "subSite" : "webmark"
        }       
    },
    {
        "from": "webmarks",
        "to": "_rewrite/_webmarks_base",
        "query": {
            "title_part1": "All",
            "title_part2": "webmarks"
        }       
    },
    {
        "from": "webmarks/latest",
        "to": "_rewrite/_webmarks_base",
        "query": {
            "title_part1": "Latest",
            "title_part2": "webmarks",
            "limit": "100"
        }       
    },
    {
        "from": "webmarks/by-url",
        "to": "_view/webmarks-by-url",
        "query": {
            "reduce": "false",
            "include_docs": "true",
            "descending" : "false"
        }       
    },
    {
        "from": "webmarks/tag/:~tagname",
        "to": "_list/webmarks/webmarks-by-tag",
        "query": {
            "template": "webmarks",
            "title_part1": ":~tagname",
            "title_part2": "tags",
            "mode": "tags",
            "reduce": "false",
            "startkey": [":~tagname",{}],
            "endkey": [":~tagname"],
            "include_docs": "true",
            "descending" : "true",
	    "subSite" : "webmark"
        }       
    },
    {
        "from": "webmarks/_tags_base",
        "to": "_list/tags/webmarks-by-tag",
        "query": {
            "template": "tags",
            "group_level" : "1",
	    "subSite" : "webmark"
        }       
    },
    {
        "from": "webmarks/tags",
        "to": "_rewrite/webmarks/_tags_base",
        "query": {
            "title_part1": "all",
            "title_part2": "tags"
        }       
    },


    {
        "from" : "blogs/add",
        "to":    "_show/add-webmark",
        "query": {
            "template": "add-webmark",
            "title_part1": "Add",
            "title_part2": "blog — ⚠ not ready ⚠ ",
	    "subSite" : "blog",
	    "type": "blog"
        }
    },
        {
        "from" : "blogs/edit/:~id",
        "to":    "_show/add-webmark/:~id",
        "query": {
            "template": "add-webmark",
            "title_part1": "Edit",
            "title_part2": "blog",
	    "subSite" : "blog",
	    "type": "blog"
        }
    },
    {
        "from": "_blogs_base",
        "to": "_list/webmarks/blog-by-date",
        "query": {
            "template": "webmarks",
            "reduce": "false",
            "include_docs": "true",
            "descending" : "true",
	    "subSite" : "blog"
        }       
    },
    {
        "from": "blogs",
        "to": "_rewrite/_blogs_base",
        "query": {
            "title_part1": "Blog",
            "title_part2": "Titles"
        }       
    },
    {
        "from": "blogs/latest",
        "to": "_rewrite/_blogs_base",
        "query": {
            "title_part1": "Latest",
            "title_part2": "blogs",
            "limit": "100"
        }       
    },
    {
        "from": "blogs/tag/:~tagname",
        "to": "_list/webmarks/blogs-by-tag",
        "query": {
            "template": "webmarks",
            "title_part1": ":~tagname",
            "title_part2": "tags",
            "mode": "tags",
            "reduce": "false",
            "startkey": [":~tagname",{}],
            "endkey": [":~tagname"],
            "include_docs": "true",
            "descending" : "true",
	    "subSite" : "blog"
        }       
    },
    {
        "from": "blogs/_tags_base",
        "to": "_list/tags/blogs-by-tag",
        "query": {
            "template": "tags",
            "group_level" : "1",
	    "subSite" : "blog"
        }       
    },
    {
        "from": "blogs/tags",
        "to": "_rewrite/blogs/_tags_base",
        "query": {
            "title_part1": "all",
            "title_part2": "tags"
        }       
    },
    {
	"from": "blogs/blog/:~id",
	"to":    "_show/blog/:~id",
        "query": {
            "template": "blog",
	    "subSite" : "blog"
        }
    },
    
    {
        "from": "db/*",
        "to": "../../*"
    }
]
